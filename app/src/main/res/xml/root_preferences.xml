<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory app:title="@string/themeSettings">
        <DropDownPreference
            app:defaultValue="@string/theme_AppCompatDelegate_MODE_NIGHT_FOLLOW_SYSTEM"
            app:entries="@array/darkTheme"
            app:entryValues="@array/darkThemeValue"
            app:key="@string/key_dark_mode"
            app:summary="%s"
            app:title="@string/theme" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/translation_screen_options">
        <SwitchPreference
            app:defaultValue="true"
            app:key="@string/key_switch_popup_mode"
            app:title="@string/use_popup_mode" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/app_launch_options">
        <SwitchPreference
            app:defaultValue="true"
            app:key="@string/key_switch_translate_button"
            app:title="@string/show_translate_button" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/about_this_app">
        <Preference
            app:key="@string/key_version"
            app:title="@string/version" />
    </PreferenceCategory>
</PreferenceScreen>
